    "proof_name": {
      "begin": "(?<=\\b(Theorem|Lemma|Remark|Fact|Corollary|Property|Proposition)\\b\\s+)",
      "end": "(?=\\b\\s+)",
      "name": "entity.name.function.theorem.coq"
    },
    "proof_bind": {
