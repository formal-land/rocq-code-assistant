      "name": "variable.paramter.function.theorem.coq"
    },
    "proof_type": {
      "begin": "(?<=\\:\\s*)",
      "end": "(?=\\s*\\.(?!\\S))",
      "name": "storage.type.function.theorem.coq"
    },
    "tactic": {
      "begin": "(?=[a-zA-Z]|_|\\p{L})",
      "end": "(?<=\\.|;)(?!\\S)",
      "name": "tactic"
    }
